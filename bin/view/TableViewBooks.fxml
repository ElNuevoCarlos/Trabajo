<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="395.0" prefWidth="457.0" spacing="20" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TableViewBooksControllers">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>
    <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Libros">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <effect>
            <DropShadow color="#95a5a6" radius="3" />
        </effect>
    </Label>
   <TableView fx:id="tableBook" prefHeight="200.0" prefWidth="200.0">
     <columns>
       <TableColumn fx:id="titulo" prefWidth="75.0" text="Titulo" />
       <TableColumn fx:id="autor" prefWidth="75.0" text="Autor" />
         <TableColumn fx:id="ISBN" prefWidth="75.0" text="ISBN" />
         <TableColumn fx:id="año" prefWidth="75.0" text="Año" />
     </columns>
   </TableView>
    <Button onAction="#goToMainMenu" prefHeight="40" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5;" text="Volver al Menú Principal">
        <effect>
            <DropShadow color="#c0392b" radius="3" />
        </effect>
    </Button>
</VBox>
