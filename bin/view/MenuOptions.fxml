<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MenuOptionsController">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>
    <Button onAction="#registerBook" prefHeight="40" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;" text="Registrar Libro">
        <effect>
            <DropShadow color="#2980b9" radius="3" />
        </effect>
    </Button>
   <Button onAction="#registerArticle" prefHeight="40" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #f0ff00; -fx-background-radius: 5;" text="Registrar Articulo">
      <effect>
         <DropShadow color="#2980b9" radius="3" />
      </effect>
   </Button>
</VBox>
